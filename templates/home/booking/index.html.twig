{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <div class="container mb-5">
        <form>
            <div class="mb-3">
                <label for="InputEmail" class="form-label">E-mail</label>
                <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="InputName" class="form-label">Nom</label>
                <input type="text" class="form-control" id="InputName">
            </div>
            <div class="mb-3 form-check">
                <label for="InputNumber"></label><input type="number" class="form-label" id="InputNumber">
                <label class="form-check-label" for="exampleCheck1">Nombre de convives</label>
            </div>
            <div class="mb-3">
                <label for="InputAllergy" class="form-label">Allergies</label>
                <input type="text" class="form-control" id="InputAllergy">
            </div>
            <button type="submit" class="btn btn-dark">Réserver</button>
        </form>
    </div>
{% endblock %}
